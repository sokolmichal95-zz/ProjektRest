<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence" version="1.0">

    <persistence-unit name="myUnit">
        <description>My Persistence Unit</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>pl.com.musicstore.api.entities.UserEntity</class>
        <class>pl.com.musicstore.api.entities.AlbumEntity</class>
        <class>pl.com.musicstore.api.entities.InstrumentEntity</class>
    </persistence-unit>

</persistence>